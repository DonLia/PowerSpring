
@model ForumViewModel

@{
    ViewData["Title"] = "PowerSpring BBS";
}
<asp:Label ID="CurrentTime" runat="server" />
<div id="wrapper">
    <h3>Current User: @User.Identity.Name</h3>
</div>
@*Start New Post Button*@
<div class="form-group">
    <div class="col-md-5">
        <a asp-controller="Forum" asp-action="NewPost"><input type="button" class="btn btn-primary" value="Start New Post"></a>
    </div>
</div>

@*Display All Undeleted Posts*@
<table style="width:80%">
    <tr>
        <th>Post Title</th>
        <th>Poster Id</th>
        <th>Post Time</th>
        @if (User.IsInRole("Admin"))
        {
            <th>DELETE POST</th>
            <th>BLOCK REPLY</th>
        }
    </tr>
    @foreach (var post in Model.Posts)
    {
        @if (!post.IsDeleted)
        {
            <tr>
                <td><a asp-controller="Forum" asp-action="Details" asp-route-id="@post.Id"> @post.Title </a> </td>
                <td> @post.UserId</td>
                <td> @post.Time</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-controller="Forum" asp-action="DeletePost" asp-route-id="@post.Id">Delete</a>
                    </td>
                    @if (!post.IsBlocked)
                    {
                        <td>
                            <a asp-controller="Forum" asp-action="BlockPost" asp-route-id="@post.Id">Block</a>
                        </td>
                    }
                    @if (post.IsBlocked)
                    {
                        <td>
                            <a asp-controller="Forum" asp-action="UnBlockPost" asp-route-id="@post.Id">UnBlock</a>
                        </td>
                    }
                }
            </tr>
        }
        else
        {
            @if (User.IsInRole("Admin"))
            {
                <tr>
                    <td> @post.Title</td>
                    <td> @post.UserId</td>
                    <td> @post.Time</td>
                    <td>
                        <a asp-controller="Forum" asp-action="UnDeletePost" asp-route-id="@post.Id">UnDelete</a>
                    </td>
                </tr>
            }
        }
    }

</table>


