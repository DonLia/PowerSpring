@using PowerSpring.Models.Forum;
@model Post           

<form asp-action="NewPost" method="post" class="form-horizontal blockDisplay" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Title" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="text" asp-for="@Model.Title" class="form-control">
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Content" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <textarea asp-for="@Model.Content" class="form-control"></textarea>
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ImageUrl" class="col-md-2 control-label">Image</label>
        <div class="col-md-3">
            @*<input type="file" name="Image">*@
            <input type="text" asp-for="@Model.ImageUrl" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Post">
        </div>
    </div>

</form>