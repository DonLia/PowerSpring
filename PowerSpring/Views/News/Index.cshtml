
@model PowerSpring.ViewModels.NewsViewModel



<h2>@Model.Title</h2>

@foreach (var news in @Model.NewsList)
{
    if (!news.IsDeleted)
    {
        <tr>
            <td><a asp-controller="News" asp-action="Details" asp-route-id="@news.Id"> @news.NewsTitle </a> </td>
            <td> @news.Content</td>
            <td> @news.Date</td>
        </tr>

            }
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-controller="News" asp-action="DeleteNews" asp-route-id="@news.Id">Delete</a>
                </td>
            }
 }


