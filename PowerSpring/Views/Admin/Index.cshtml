@model AdminViewModel
<h2>
    Hello, Admin @User.Identity.Name !
</h2>
<br />
<div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
        <form method="post">
            <input type="text" asp-for="searchName" placeholder="Username" style="width:auto">
            <button type="submit" style="background-color:lightgray; width:100px" class="btn btn-sm">search</button>
        </form>
    </div>
    </div>
    <div class="row" style="height:500px;overflow-y:scroll;overflow-x:hidden">
        <table class="table">
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Is Admin</th>
                <th>Mute User</th>
            </tr>
            @foreach (var webUser in Model.webUsers)
            {
                <tr>
                    <th>@webUser.Id</th>
                    <td>@webUser.UserName</td>
                    <td>@webUser.Email</td>
                    <td>@webUser.Phone</td>
                    <td>@webUser.IsAdmin</td>
                    <td>
                        @if (webUser.Muted)
                        {
                            <a asp-controller="Admin" asp-action="Mute" asp-route-id="@webUser.Id" asp-route-searchName="@Model.searchName" style="background-color:lightgray;width:80%" class="btn btn-sm">Muted</a>
                        }
                        else
                        {
                            <a asp-controller="Admin" asp-action="Mute" asp-route-id="@webUser.Id" asp-route-searchName="@Model.searchName" style="background-color:lightblue;width:80%" class="btn btn-sm">Mute</a>
                        }
                    </td>
                </tr>
            }
        </table>

    </div>
